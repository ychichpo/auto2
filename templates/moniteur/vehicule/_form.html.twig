{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="row justify-content-center">
    <div class="col-md-6"> <!-- Réduisez la colonne à 6 ou moins selon la largeur désirée -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Informations du Véhicule</h3>
            </div>
            <div class="card-body">

                <div class="form-group">
                    {{ form_label(form.marque, 'Marque', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.marque) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.modele, 'Modèle', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.modele) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.annee, 'Année', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.annee) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.code_categorie, 'Catégorie', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.code_categorie, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.code_categorie) }}
                </div>

                <div class="form-group text-center"> <!-- Ajout de la classe text-center -->
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                </div>


            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
