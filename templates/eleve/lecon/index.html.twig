{% extends 'base.html.twig' %}

{% block title %}Mes leçons{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Mes leçons</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Moniteur</th>
                <th>Date du rdv</th>
                <th>Heure du rdv</th>
                <th>Infos voiture</th>
                <th>Réglée ?</th>
            </tr>
            </thead>
            <tbody>
            {% for lecon in lecons %}
                <tr>

                    <td> {{ lecon.CodeMoniteur.prenom }} {{ lecon.CodeMoniteur.nom }}</td>
                    <td>{{ lecon.rdv ? lecon.rdv|date('d-m-Y') : 'Non programmé' }}</td>
                    <td>{{ lecon.rdv ? lecon.rdv|date('H:i:s') : 'Non programmé' }}</td>
                    <td>{{ lecon.Immatriculation.marque }} {{ lecon.Immatriculation.modele }}
                        {{ lecon.Immatriculation.annee }}</td>
                    <td>{{ lecon.reglee ? 'Oui' : 'Non' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_eleve_lecon_new') }}" class="btn btn-info">Créer une nouvelle leçon</a>
        <a href="{{ path('app_eleve_espace_eleve') }}" class="btn btn-info">Retour à l'espace élève</a>

    </div>
{% endblock %}
